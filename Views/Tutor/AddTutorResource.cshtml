
@{
    ViewBag.Title = "AddTutorResource";
    Layout = "~/Views/Shared/_LayoutTutor.cshtml";
}


<br />
<style>
    [ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak],
    .ng-cloak, .x-ng-cloak,
    .ng-hide {
        display: none !important;
    }

    .submit_btn {
        padding: 10px 32px;
    }
</style>

<div class="container" ng-app="app" ng-controller="MyCtrl" ng-init="addtutorresourceinit()">
    <h2 class="text-center"><b><u>Add Tutor Resource</u></b></h2>
    <br />
    <form name="validateaddtutorresource" novalidate>

        <div class="form-row mt-1">
            <div class="col-md-3"></div>
            <div class="form-group col-md-6 text-center">
                <label><b>Select Course</b></label>

                <select class="form-control" required ng-model="CourseId" name="validcourse"
                        ng-options="item.CourseId as item.CourseName for item in CourseForTutor">
                    <option value="" selected><p> -- Select Course -- </p></option>
                </select>
                <span style="color:Red" ng-show="validateaddtutorresource.validcourse.$error.required && validateaddtutorresource.validcourse.$dirty" ng-cloak>
                    Course is required
                </span>
            </div>

        </div>

        <div class="form-row mt-1">
            <div class="form-group col-md-12 text-center">
                <label><b>Upload Resource</b></label>

                <input type="file" required name="file" ngf-select="UploadResourseFilesByTutors($file)" ng-model="SelectedFiles" />
                <span style="color:Red" ng-show="validateaddtutorresource.file.$error.required && validateaddtutorresource.file.$dirty" ng-cloak>
                    File is required
                </span>
            </div>
        </div>

        <div class="form-row mt-1">
            <div class="form-group col-md-12" style="margin-left:50px;">
                <table class="table table table-striped">
                    <tr>
                        <th>S.No</th>
                        <th>Resource Name</th>
                        <th>Action</th>
                    </tr>
                    <tr ng-repeat="d in  arrResourceFiles">
                        <td>{{$index+1}}</td>
                        <td>{{ d.ResourceName }}</td>
                        <td><a href="" class="btn btn-sm btn-danger" ng-click="DeleteTutorsResourceArray($index);" /><i class="fa fa-trash"></i></a></td>
                    </tr>
                </table>
            </div>
        </div>

        <div class="col-md-12 text-center">

            <button type="submit" ng-click="FileUploadByTutor()" class="btn btn-md btn-primary" ng-disabled="validateaddtutorresource.$invalid">Submit </button>
        </div>
    </form>
</div>


