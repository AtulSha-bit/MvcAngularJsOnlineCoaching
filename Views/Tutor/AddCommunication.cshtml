
@{
    ViewBag.Title = "AddCommunication";
    Layout = "~/Views/Shared/_LayoutBrandTutor.cshtml";
}

<style>

    fieldset {
        border: 2px solid #3d5a80 !important;
        padding: 1rem !important
    }

    legend {
        width: auto !important;
        text-align: center;
    }


    .table-bordered td {
        text-align: center;
    }

    .table-bordered thead th {
        padding: 15px 26px;
    }

    .table-responsive {
        display: table;
    }

    @@media only screen and (max-width:767) {
        .table-responsive {
            display: block;
        }
    }
</style>

<h2 class="text-center mt-2"><b><u>Add Brand Tutor Communication</u></b></h2>
<div ng-app="app" ng-controller="MyCtrl" ng-init="CoursesForBrandTutor()" class="m-1" ng-cloak>
    @* GetStudentDetails();GetTutorDetails();ViewStudentCategoryDetails();GetAddedInternships();addcourseinit()     ViewSectionByCategoryTypeForStudent *@
    <div class="row">
        <div class="col-lg-1"></div>
        <div class="col-lg-10">
            <form>
                <fieldset>
                    <legend>Select All Student</legend>
                    @*<div class="col-md-6">*@
                    <!--Student Part-->

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Select All Students</label>
                        @*<input type="checkbox" class="form-control" ng-model="chkAllCourseStudents" />*@
                        <input type="checkbox" class="form-control" ng-model="chkAllBrandTutorStudents" />
                    </div>
                    <div class="form-group col-md-6">
                        <label>Select Course</label>
                        <select class="form-control" ng-model="mdlCourseForStudent" ng-change="getBrandTutorCourseStudents()" ng-options="d.CourseId as d.CourseName for d in BrandTutorCourse">
                            <option value="">--Select--</option>

                        </select>
                    </div>
                </div>

                    <br />

                    <div class="row" ng-show="shListOfBrandStudent">
                        <div class="col-12 pt-2">
                            <!--List of Intern Student-->
                            <h5><b>List Of Students </b></h5>
                            <table ng-table="BrandTutorStudentsList" show-filter="true" class="table-bordered table-hover table-condensed table-responsive">
                                <tr ng-repeat="d in $data">
                                    <td title="'S.No'">{{$index+1}}</td>
                                    <td title="'Name'">{{d.Name}}</td>
                                    <td title="'Select'">
                                        @* chkInternStudent*@
                                        <input type="checkbox" ng-model="d.chkBrandStudent" ng-change="SelectMultipleBrandStudentForCommunication();" />
                                    </td>
                                </tr>
                            </table>
                            <br />
                            <hr />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-12">
                            <label>Message To Students</label>
                            <textarea type="text" class="form-control" ng-model="mdlMsgToStudents"></textarea>
                        </div>
                        @*<div class="col-md-6">
                            <label>Message To All</label>
                            <textarea type="text" class="form-control" ng-model="mdlMsgAll"></textarea>
                        </div>*@
                    </div>

                    <div class="form-row text-center mt-1">
                        <div class="col-md-12">
                            <input type="button" value="Sent Message" class="btn btn-primary" ng-click="AddMessageForBrandStudentsCommunicatioin();" />
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
        <div class="col-lg-1"></div>




    </div>

</div>



