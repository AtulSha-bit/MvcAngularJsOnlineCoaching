
@{
    ViewBag.Title = "AddCommunication";
    Layout = "~/Views/Shared/_LayoutInternTutor.cshtml";
}


<style>

    fieldset {
        border: 2px solid #3d5a80 !important;
        padding: 1rem !important
    }

    legend {
        width: auto !important;
        text-align: center;
    }


    .table-bordered td {
        text-align: center;
    }

    .table-bordered thead th {
        padding: 15px 26px;
    }

    .table-responsive {
        display: table;
    }

    @@media only screen and (max-width:767) {
        .table-responsive {
            display: block;
        }
    }
</style>

<h2 class="text-center mt-2"><b><u>Add Intern Tutor Communication</u></b></h2>
<div ng-app="app" ng-controller="MyCtrl" ng-init="InternTutorInit()" class="m-1" ng-cloak>
    @* CoursesForBrandTutor GetStudentDetails();GetTutorDetails();ViewStudentCategoryDetails();GetAddedInternships();addcourseinit()     ViewSectionByCategoryTypeForStudent *@
    <div class="row">
        <div class="col-lg-1"></div>
        <div class="col-lg-10">
            <form>
                <fieldset>
                    <legend>Select All Student</legend>
                    @*<div class="col-md-6">*@
                    <!--Student Part-->

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Select All Intern Students</label>
                            @*<input type="checkbox" class="form-control" ng-model="chkAllCourseStudents" />*@
                            <input type="checkbox" class="form-control" ng-model="chkAllInternStudents" />
                        </div>

                        <div class="form-group col-md-6">
                                <label>Select Internship</label>
                                <select class="form-control" ng-model="mdlInternForStudent" ng-change="getInternTutorStudents()" ng-options="d.InternshipId as d.InternshipName for d in InternshipsData">
                                    <option value="">--Select Internship--</option>

                                </select>
                            </div>



                    </div>

                    <br />

                    <div class="row" ng-show="shListOfInternStudent">
                        <div class="col-12 pt-2">
                            <!--List of Intern Student-->
                            <h5><b>List Of Students </b></h5>
                            <table ng-table="InternTutorStudentsList" show-filter="true" class="table-bordered table-hover table-condensed table-responsive">
                                <tr ng-repeat="d in $data">
                                    <td title="'S.No'">{{$index+1}}</td>
                                    <td title="'Name'">{{d.Name}}</td>
                                    <td title="'Select'">
                                        @* chkInternStudent SelectMultipleBrandStudentForCommunication *@
                                        <input type="checkbox" ng-model="d.chkInternStudents" ng-change="SelectMultipleInternStudentsForCommunication();" />
                                    </td>
                                </tr>
                            </table>
                            <br />
                            <hr />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6">
                            <label>Message To Students</label>
                            <textarea type="text" class="form-control" ng-model="mdlMsgToInternStudents"></textarea>
                        </div>
                        @*<div class="col-md-6">
            <label>Message To All</label>
            <textarea type="text" class="form-control" ng-model="mdlMsgAll"></textarea>
        </div> AddMessageForBrandStudentsCommunicatioin *@
                    </div>

                    <div class="form-row text-center mt-1">
                        <div class="col-md-12">
                            <input type="button" value="Sent Message" class="btn btn-primary" ng-click="AddMessageForInternStudentCommunication();" />
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
        <div class="col-lg-1"></div>




    </div>

</div>
