
@{
    ViewBag.Title = "AdminChangePassword";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    body {
        /*background-image: linear-gradient(180deg, white,#1e87f0 );*/
    }
</style>
<div class="container" ng-app="app" ng-controller="MyCtrl">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6" style="margin-top: 3em;">
            <form name="adminchangepass" novalidate class="mt-5 p-3" style="border:1px solid #1e87f0;border-radius:15px;">
                @*background-image: linear-gradient(180deg,#1e87f0 ,white );*@
                <h2 style="text-align:center"><b><u>Change Password</u></b></h2>
                <div class="form-row mt-5">

                    <div class="form-group col-md-12">
                        <label for="currentpass" class="control-label"><b>Old Password</b></label>
                        <input type="password" class="form-control" required name="currentpass" ng-model="AdminCurrentPassword" id="currentpass" />
                        <span style="color:Red" ng-show="adminchangepass.currentpass.$error.required && adminchangepass.currentpass.$touched" ng-cloak>
                            Old Password is required
                        </span>

                    </div>
                </div>


                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="inputPassword3" class="control-label"><b> New Password</b></label>
                        <input type="password" class="form-control" required ng-model="AdminNewPassword" name="newpass" id="newpass" />
                        <span style="color:Red" ng-show="adminchangepass.newpass.$error.required && adminchangepass.newpass.$touched" ng-cloak>
                            New Password is required
                        </span>
                    </div>
                </div>

               

                <div class="row pb-2">
                    <div class="col-md-12 text-center">
                       @* changeInternPassword*@
                        <input type="button" value="Submit" class="btn btn-outline-primary" ng-disabled="adminchangepass.$invalid" ng-click="changeAdminPassword()" />
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>


