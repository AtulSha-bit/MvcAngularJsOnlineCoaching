
@{
    ViewBag.Title = "CourseStudentToTutorComm";
    Layout = "~/Views/Shared/_LayoutTutor.cshtml";
}


<style>
    .table-bordered td {
        text-align: center;
    }

    .table-bordered thead th {
        padding: 15px 43px;
    }

    input.form-control, select.form-control {
        height: 22px !important;
    }
    .table-responsive {
        display: table;
    }

    @@media only screen and (max-width:767px) {
        .table-responsive {
            display: block;
        }
    }
</style>
<div ng-app="app" ng-controller="MyCtrl" ng-init="GetCourseStudentMessage()" ng-cloak>
    <br />
    <h2 style="text-align:center"><b><u>View Course Student To Tutor Incoming </u></b></h2>
    <div class="row m-1">
        <table ng-table="CourseStudentMsgIncomingForCourseTutor" show-filter="true" class="table-bordered table-hover table-condensed table-responsive">
            <tr ng-show="$data!='undefined' && $data!='null' && $data.length!=0" ng-repeat="user in $data">
                <td data-title="'S.No'">{{$index+1}}</td>

                <td data-title="'Student Name'" sortable="'Name'" filter="{ 'Name': 'text' }">
                    {{ user.Name }}
                </td>

                <td data-title="'Message'" sortable="'Message'" filter="{ 'Message': 'text' }">
                    {{ user.Message }}
                </td>

                <td data-title="'Date Created'" sortable="'DateCreated'" filter="{ 'DateCreated': 'text' }">
                    {{ user.DateCreated }}
                </td>

            </tr>
            <tr>
                <td colspan="4" ng-show="$data =='undefined' || $data =='null' || $data.length==0 ">
                    <h2 class="text-center"> <font color="red"> No records found</font>  </h2>
                </td>
            </tr>

        </table>
        <br />
        <br />
    </div>
</div>


