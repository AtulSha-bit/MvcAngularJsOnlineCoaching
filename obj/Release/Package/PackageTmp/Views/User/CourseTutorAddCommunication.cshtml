
@{
    ViewBag.Title = "CourseTutorAddCommunication";
    Layout = "~/Views/Shared/_LayoutStudents.cshtml";
}



<div ng-app="app" ng-controller="MyCtrl" ng-init="CourseStudentsInit()" ng-cloak>
    <form id="inner" name="addcoursetutor" novalidate>
        <br /><br />
        <h2 style="text-align:center"><b>Student To Course Tutor Add Communication</b></h2>
        <br /><br />

        

        <div class="form-row">
            <div class="col-md-3"></div>
            <div class="form-group col-md-6">
                <label for="inputState">Select Course Tutor</label>
                <select id="selectCourse" class="form-control" name="coursetutor" ng-model="CourseTutor" ng-change="getCoursesOfCourseTutor()"
                        ng-options="item.TutorId as item.TutorName for item in CourseStudentTutorsData">
                    <option value="" selected> -- Select  Course Tutor --</option>
                </select>
            </div>
            <div class="col-md-3"></div>
        </div>

        <div class="form-row">
            <div class="col-md-3"></div>
            <div class="form-group col-md-6" ng-hide="hidestrCourse">
                <label for="inputState">Select Course</label>
                <select id="selectCourse" class="form-control" name="coursetutor" ng-model="strCourse" ng-change="getCoursesOfCourseTutor()"
                        ng-options="item.CourseId as item.CourseName for item in GetCourseTutorsForCourseStudent">
                    <option value="" selected> -- Select  Course --</option>
                </select>
            </div>
            <div class="col-md-3"></div>
        </div>

        <div class="form-row">
            <div class="col-3"></div>
            <div class="col-6">
                <label>Message To Course Tutor</label>
                <textarea type="text" class="form-control" ng-model="mdlMessageToCourseTutor"></textarea>
                <br />
            </div>
            <div class="col-3"></div>
        </div>

    </form>

    <div class="form-row">
    
        <div class="col-3"></div>
        <div class="col-6">
            <button type="submit" class="btn btn-primary" ng-click="CourseStudentToTutorAddCommunication()">Sent Message</button>
        </div>
            <div class="col-3"></div>
    </div>

</div>