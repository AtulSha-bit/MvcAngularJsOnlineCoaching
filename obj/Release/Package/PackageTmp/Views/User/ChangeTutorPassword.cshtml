
@{
    ViewBag.Title = "ChangeTutorPassword";
    Layout = "~/Views/Shared/_LayoutTutor.cshtml";
}
<style>
    body {
        /*background-image: linear-gradient(180deg, white,#1e87f0 );*/
    }
</style>
<div class="container" ng-app="app" ng-controller="MyCtrl">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6" style="margin-top: 3em;">
            <form name="tutpasschange" novalidate class="mt-5 p-3" style="border:1px solid #1e87f0;border-radius:15px;">
@*background-image: linear-gradient(180deg,#1e87f0 ,white );*@
                <h2 style="text-align:center"><b><u>Change Password</u></b></h2>
                <div class="form-row mt-5">

                    <div class="form-group col-md-12">
                        <label><b> Old Password</b></label>
                        <input type="password" ng-model="mdlOldPassword" class="form-control" name="oldpass" required />
                        <span style="color:Red" ng-show="tutpasschange.oldpass.$error.required && tutpasschange.oldpass.$dirty" ng-cloak>
                            Old Password is required
                        </span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label><b> New Password</b></label>
                        <input type="password" ng-model="mdlNewPassword" class="form-control" name="newpass" required />
                        <span style="color:Red" ng-show="tutpasschange.newpass.$error.required && tutpasschange.newpass.$dirty" ng-cloak>
                            New Password is required
                        </span>
                    </div>
                </div>


                <div class="row pb-2">
                    <div class="col-md-12 text-center">
                        <input type="button" value="Submit" class="btn btn-outline-primary" ng-disabled="tutpasschange.$invalid" ng-click="ChangeTutorPassword()" />
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>
