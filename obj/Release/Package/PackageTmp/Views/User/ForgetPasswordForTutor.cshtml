
@{
    ViewBag.Title = "ForgetPasswordForTutor";
    Layout = "~/Views/Shared/_LayoutTutor.cshtml";
}
<style>
    body {
        background-image: linear-gradient(180deg, white,#1e87f0 );
    }
</style>
<div class="container" ng-app="app" ng-controller="MyCtrl" ng-init="forgetpasswordinit()">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6" style="margin-top: 6em;">
            <form class="mt-5 p-3" style="border:1px solid #1e87f0;border-radius:15px; background-image: linear-gradient(180deg,#1e87f0 ,white );">
                <h2 style="text-align:center"><b><u>Forgot Password</u></b></h2>
                <div class="col-md-12 mt-3">
                    <div class="form-row">
                        <div class="form-group col-md-12">

                            <br />
                            <label class="control-label col-md-2"><b>Email</b></label>
                            <input type="text" ng-model="Email" class="form-control" name="email" maxlength="45" required />
                        </div>
                    </div>
                    <div class="form-row text-center">
                        <div class="col-md-12">
                            <button type="submit" ng-click="verifyemailsendpasstoTutor()" class="btn btn-primary">Get Password</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
