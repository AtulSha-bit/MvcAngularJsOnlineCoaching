
@{
    ViewBag.Title = "AddInternship";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    form label {
        color: #3d5a80 !important;
      
        font-weight: unset;
    }

    .table-bordered td {
        text-align: center;
    }

    .table-bordered thead th {
        padding: 15px 26px;
    }

    .table-responsive {
        display: inline-table;
    }

    @@media only screen and (max-width:767px) {
        .table-responsive {
            display: block;
        }
    }
</style>
<title>Add Course</title>
@* addcourseinit *@
<body ng-app="app" ng-controller="MyCtrl" ng-init="addinernshipinit();GetInternashipDataById()">
    <br />
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <form name="internadd" novalidate>
                <h2 class="text-center"><b><u>Add Internship</u></b></h2>

                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label for="course" style="margin-top:6px;font-size:15px !important;">Internship Name</label>
                    </div>
                    <div class="form-group col-md-6">
                        <input type="text" class="form-control" name="internship" id="intern" ng-model="strinternship" style="margin-top:13px;">
                    </div>
                    <div class="form-group col-md-3">
                        <button type="submit" class="btn btn-primary" ng-disabled="internadd.$invalid" ng-click="saveInternship()">Save</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-lg-2"></div>
    </div>

    <div class="row mt-3 mt-lg-1 mt-md-1 m-3">
        <table ng-table="ShowTutors" show-filter="true" class="table-bordered table-hover table-condensed table-responsive">
            <tr ng-show="$data!='undefined' && $data!='null' && $data.length!=0" ng-repeat="user in $data">
                <td data-title="'Sno'">{{$index+1}}</td>
                <td data-title="'Internship'" sortable="'InternshipName'" filter="{ 'InternshipName': 'text' }">
                    {{ user.InternshipName }}
                </td>

                <td data-title="'Date Created'" sortable="'DateCreated'" filter="{ 'DateCreated': 'text' }">
                    {{ user.DateCreated  }}
                </td>

                <td data-title="'Created By'" sortable="'CreatedBy'" filter="{ 'CreatedBy': 'text' }">
                    {{ user.CreatedBy }}
                </td>

                <td data-title="'Action'" class="act">

                    <a href="#" class="btn btn-sm btn-info" ng-click="editInternship(user.InternshipId)"><i class="fa fa-edit"></i></a>

                    <a href="#" class="btn btn-sm btn-danger" data-toggle="modal" data-target="#mydeleteModal" ng-click="deleteInternship(user.Internship)"><i class="fa fa-trash"></i></a>

                </td>
            </tr>

            <tr>
                <td colspan="5" ng-show="$data =='undefined' || $data =='null' || $data.length==0 ">
                    <h2 class="text-center"> <font color="red"> No records found</font>  </h2>
                </td>
            </tr>

        </table>
    </div>

    <div class="modal fade" data-backdrop="static" id="mydeleteModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <a href="#" class="close" data-
                       dismiss="modal">&times;</a>
                </div>

                <div class="modal-body">
                    Are you sure?
                    You want to delete this record
                </div>

                <div class="modal-footer">
                    <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
                    <a class="btn btn-success" ng-click="DeleteInternship(user.InternshipId)">Confirm</a>
                </div>
            </div>
        </div>
    </div>
</body>

