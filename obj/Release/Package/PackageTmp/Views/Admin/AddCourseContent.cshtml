<br />
<h2 style="text-align:center"><b><u>Add Course Content</u></b></h2>

<div class="row" ng-app="app" ng-controller="MyCtrl" ng-init="addcoursecontentinit();updatecoursecontentinit()">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <div class="row">
            <div class="col-md-8">
                <form class="mb-5">
                    <fieldset>
                        <legend>Information</legend>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="publish"><b>Publish</b></label>
                                <input type="checkbox" class="form-control" name="IsPublished" ng-model="IsPublished" />
                            </div>

                            <div class="form-group col-md-6">
                                <label><b>-- Select Course Type --</b> </label>
                                <select id="ddlcoursetype" class="form-control" required ng-model="CourseType" ng-change="ChangeCourseType()">
                                    <option value="">-- Select Course Type --</option>
                                    <option>Course</option>
                                    <option>Intern</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6" ng-hide="hideCourse">
                                <label for="inputState">Course</label>
                                <select id="inputState" class="form-control" name="course" ng-model="Course"
                                        ng-options="item.CourseId as item.CourseName for item in CoursesData" ng-change="changeCourse()">
                                    <option value="" selected><p> -- Select  Course --</p></option>
                                </select>
                            </div>
                            <div class="form-group col-md-6 col-md-3" ng-hide="hideInternship">
                                <label for="inputState">Internship</label>
                                <select id="inputState" class="form-control" name="internship" ng-model="Internship"
                                        ng-options="item.InternshipId as item.InternshipName for item in InternshipsData" ng-change="changeInternship()">
                                    <option value="" selected>-- Select Internship --</option>
                                </select>
                            </div>
                            <div class="form-group col-md-6">
                                <label><b>Short Description</b></label>
                                <input type="text" class="form-control" ng-model="ShortDescription">
                            </div>

                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-6" ng-hide="hideCourseContentHeading">
                                <label><b>Course Content Heading</b></label>
                                <input type="text" class="form-control" ng-model="CourseContentHeading" />
                            </div>
                            <div class="form-group col-md-6" ng-hide="hidesubheadingchoice">
                                <label><b>-- Sub Heading Choice --</b> </label>
                                <select class="form-control" required ng-model="SubHeadingChoice" ng-change="ChangeSubHeadingChoice()">
                                    <option value="" selected>-- Select Choice --</option>
                                    <option>Yes</option>
                                    <option>No</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-6" ng-hide="hidesubheadingcontent">
                                <label><b> -- Sub Heading --</b></label>
                                <input type="text" class="form-control" ng-model="SubHeading" />
                            </div>

                        </div>
                        <hr />
                        <div class="form-row" ng-hide="hideDescription">

                            <div class="form-group col-md-5">
                                <label for="publish"><b>Publish</b></label>
                                <input type="checkbox" class="form-control" name="IsPublish" ng-model="mdlStudentCategoryIsPublished" />
                            </div>

                            <div class="form-group col-md-5">
                                <label for="inputAddress2"><b>Content Points</b></label>
                                <input type="text" class="form-control" ng-model="Description" id="description" name="description" maxlength="100" autocomplete="off" />
                            </div>

                            <div class="form-group col-md-2" ng-hide="btnhidebtnhidedescription">
                                <div class="b">
                                    <input type="button" value="Add" class="btn btn-outline-primary btn-sm" ng-click="AddMultipleDescription()" />
                                </div>
                            </div>
                        </div>
                        <div class="form-row" ng-hide="hideDescriptionTable" ng-if="arrCourseContentDescription.length > 0">
                            <div class="form-group col-md-12">
                                <table class="table table table-striped">
                                    <tr style="background-color:aliceblue">
                                        <th>S.No</th>
                                        <th>Publish</th>
                                        <th>Content Point</th>
                                        <th>Action</th>
                                    </tr>
                                    <tr ng-repeat="d in arrCourseContentDescription track by $index">
                                        <td>{{$index+1}}</td>
                                        <td><input type="checkbox" ng-model="d.IsPublished" class="form-control" /></td>
                                        <td>
                                            <input class="form-control" maxlength="100" ng-model="d.Description" />
                                        </td>
                                        <td><input type="button" value="Delete" class="btn btn-danger btn-sm" ng-click="DeleteDescription($index);" /></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <hr />
                        <div class="form-row" ng-hide="hidePrerequisities">
                            <hr />
                            <div class="form-group col-md-5">
                                <label for="publish"><b>Publish</b></label>
                                <input type="checkbox" class="form-control" name="IsPublish" ng-model="mdlPrerequisitiesIsPublished" />
                            </div>
                            <div class="form-group col-md-5">
                                <label for="inputAddress2"><b>Prerequisite Points</b></label>
                                <input class="form-control" ng-model="PrerequisityPoint" id="prerequisities" name="prerequisity" maxlength="100" autocomplete="off" />
                            </div>
                            <div class="form-group col-md-2" ng-hide="btnhideprequisities">
                                <div class="b">
                                    <input type="button" value="Add" class="btn btn-outline-primary btn-sm" ng-click="AddMultiplePrequisities()" />
                                </div>
                            </div>
                        </div>

                        <div class="form-row" ng-hide="hidePrerequisitiesTable" ng-if="arrCoursePrerequisities.length > 0">
                            <div class="form-group col-md-12">
                                <table class="table table table-striped">
                                    <tr style="background-color:aliceblue">
                                        <th>S.No</th>
                                        <th>Publish</th>
                                        <th>Prerequisities</th>
                                        <th>Action</th>
                                    </tr>
                                    <tr ng-repeat="d in arrCoursePrerequisities track by $index">
                                        <td>{{$index+1}}</td>
                                        <td><input type="checkbox" ng-model="d.IsPublished" class="form-control" /></td>
                                        <td>
                                            <input class="form-control" maxlength="100" ng-model="d.PrerequisitePoints" />
                                        </td>
                                        <td><input type="button" value="Delete" class="btn btn-danger btn-sm" ng-click="DeletePrequisities($index);" /></td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <div class="form-row text-center">
                            <div class="form-group col-md-12" ng-hide="Insertbtn">
                                <button type="submit" class="btn btn-primary" ng-click="AddCourseContent()">Submit</button>
                            </div>
                        </div>

                        <div class="form-row text-center">
                            <div class="form-group col-md-12" ng-hide="hideUpdatebtn">
                                <button type="submit" class="btn btn-primary" ng-click="UpdateCourseContentDescription()">Update</button>

                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-md-12">
                                <input type="button" value="Preview" ng-click="CourseContentPreview();" class="btn btn-info" />
                            </div>
                        </div>

                        <!--==== List Of Bullets Points(Content Points) By Dilshad On 31 Oct 2020-->
                        <div class="row">
                            <div class="col-md-12">


                            </div>
                        </div>
                        <br /><br />
                        <!--==== END List Of Bullets Points(Content Points) By Dilshad On 31 Oct 2020-->
                    </fieldset>
                </form>
            </div>
            <div class="col-md-4" style="margin-top: 2em;">
                @*<div ng-repeat="d in CourseHeadingArray">
                        <ol><u>{{$index+1}}. {{ d.CourseContentHeading }}</u> </ol>
                        <ul ng-repeat="d1 in Descriptiondata">
                            <li ng-if="d.ContentId === d1.ContentId">{{d1.Description}}</li>
                        </ul>
                    </div>*@
                <!--==== List Of Bullets Points(Content Points) By Dilshad On 31 Oct 2020-->
                <div class="row" ng-if="CourseType === 'Course'">
                    <div class="col-md-12">
                        <div ng-repeat="d in CourseHeadingArray">
                            <ol><u>{{$index+1}}. {{ d.CourseContentHeading }}</u> </ol>
                            <ul ng-repeat="d1 in Descriptiondata">
                                <li ng-if="d.ContentId === d1.ContentId">{{d1.Description}}</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <br /><br />
                <!--==== END List Of Bullets Points(Content Points) By Dilshad On 31 Oct 2020-->
                <!--==== List Of Bullets Points(Content Points For Internship) By Dilshad On 2 Nov 2020-->
                <div class="row" ng-if="CourseType === 'Intern'">
                    <div class="col-md-12">
                        <div ng-repeat="d in InternHeadingdata">
                            <ol><u>{{$index+1}}. {{ d.CourseContentHeading }}</u> </ol>
                            <ul ng-repeat="d1 in InternDescriptiondata">
                                <li ng-if="d.ContentId === d1.ContentId">{{d1.Description}}</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <br /><br />
                <!--==== END List Of Bullets Points(Content Points For Internship) By Dilshad On 2 Nov 2020-->
            </div>
        </div>
    </div>
    <div class="col-md-1"></div>
    <div class="row">
        <!-- Modal Course-->
        <div id="CourseContentPreview" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Course Content Overview </h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">

                        <div class="col-md-12" style="">
                            <h3 style="text-transform:capitalize;text-align:center"><b> {{ CourseName }} </b></h3>
                        </div>

                        <div class="row" id="req">
                            <h3 style="margin: 0 2.4rem 1.6rem;"><u>What you'll learn</u></h3>
                            <div class="col-md-12">
                                <ul class="requl">
                                    <li><svg xmlns=""><path d="M0 11c2.761.575 6.312 1.688 9 3.438 3.157-4.23 8.828-8.187 15-11.438-5.861 5.775-10.711 12.328-14 18.917-2.651-3.766-5.547-7.271-10-10.917z" /></svg><span class="gap">By the end of this course you will understand the fundamentals of the Linux operating system and be able to apply that knowledge in a practical and useful manner.</span></li>
                                    <li><svg xmlns=""><path d="M0 11c2.761.575 6.312 1.688 9 3.438 3.157-4.23 8.828-8.187 15-11.438-5.861 5.775-10.711 12.328-14 18.917-2.651-3.766-5.547-7.271-10-10.917z" /></svg><span class="gap">Quickly Learn the Linux Command Line from Scratch!</span></li>
                                    <li><svg xmlns=""><path d="M0 11c2.761.575 6.312 1.688 9 3.438 3.157-4.23 8.828-8.187 15-11.438-5.861 5.775-10.711 12.328-14 18.917-2.651-3.766-5.547-7.271-10-10.917z" /></svg><span class="gap">By the end of this course you will understand the fundamentals of the Linux operating system and be able to apply that knowledge in a practical and useful manner.</span></li>
                                    <li><svg xmlns=""><path d="M0 11c2.761.575 6.312 1.688 9 3.438 3.157-4.23 8.828-8.187 15-11.438-5.861 5.775-10.711 12.328-14 18.917-2.651-3.766-5.547-7.271-10-10.917z" /></svg><span class="gap">Quickly Learn the Linux Command Line from Scratch!</span></li>
                                </ul>
                            </div>
                        </div>

                        <div class="row" id="req">
                            <h3 style="margin: 0 2.4rem 1.6rem;"><u>Requirements</u></h3>
                            <div class="col-md-12">
                                <ul class="requl">
                                    <li><svg id="icon-bullet" viewBox="0 0 24 24"><path d="M17 12c0 2.761-2.239 5-5 5s-5-2.239-5-5c0-2.761 2.239-5 5-5s5 2.239 5 5z"></path></svg><span class="gap">We Start from Scratch so no previous experience required!</span></li>
                                    <li><svg id="icon-bullet" viewBox="0 0 24 24"><path d="M17 12c0 2.761-2.239 5-5 5s-5-2.239-5-5c0-2.761 2.239-5 5-5s5 2.239 5 5z"></path></svg><span class="gap">This Course is targeted Primarily at Beginners, So if you have more than a few years Linux experience, this course might not be for you.</span></li>
                                    <li><svg id="icon-bullet" viewBox="0 0 24 24"><path d="M17 12c0 2.761-2.239 5-5 5s-5-2.239-5-5c0-2.761 2.239-5 5-5s5 2.239 5 5z"></path></svg><span class="gap">This Course is targeted Primarily at Beginners, So if you have more than a few years Linux experience, this course might not be for you.</span></li>
                                </ul>
                            </div>
                        </div>

                        <div class="row" id="req">
                            <h3 style="margin: 0 2.4rem 1.6rem;"><u>Description</u></h3>
                            <div class="col-md-12">
                                <p class="sd"> {{ShortDescription}} </p>
                                <h6 ng-if="ShortDescription === undefined || ShortDescription === ''">{{ CourseName }} is good course to take for getting recruited in good companies</h6>
                            </div>
                        </div>

                        <div class="row" style="text-align:center;" id="req">
                            <div class="col-md-6">
                                <div class="accordion" id="accordionExample">
                                    <div class="card">
                                        <div class="card-header" id="headingOne">
                                            <h2 class="mb-0">
                                                <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                                    <i class="fa fa-chevron-down" id="fa"></i>  Prerequisities
                                                </button>
                                            </h2>

                                        </div>

                                        <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
                                            <div class="card-body">
                                                <ul class="pure-tree">
                                                    <li ng-repeat="d in arrCoursePrerequisities" id="subli">
                                                        {{ d.PrerequisitePoints }}
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card">
                                        @*ng-repeat="d in HeadingsContent"*@
                                        <div class="card-header" id="headingTwo">
                                            <h2 class="mb-0">
                                                <button class="btn btn-link btn-block text-left collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                                    <i class="fa fa-chevron-down" id="fa"></i><lable>
                                                        {{CourseContentHeading}}
                                                    </lable>
                                                </button>
                                            </h2>
                                        </div>
                                        <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
                                            <div class="card-body text-left">

                                                <ul ng-repeat="d1 in arrCourseContentDescription" class="scope">
                                                    <li id="subli">{{d1.Description}}</li>
                                                </ul>


                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="col-md-6">

                                <div class="boxx">
                                    <h3 style="margin: .5rem 2.4rem 1.6rem;">Contents</h3>

                                    <i class="fa fa-calendar" aria-hidden="true">&nbsp;DURATION</i>
                                    <p ng-if="DurationName !== undefined">{{DurationName}}</p>
                                    <p ng-if="DurationName === undefined || DurationName === ''">Immediate</p>


                                    <div class="row">
                                        <div class="col-md-12">
                                            <ol class="scope"><u><b>{{$index+1}}. {{CourseContentHeading }}</u></b></ol>
                                            <ul ng-repeat="d1 in arrCourseContentDescription" style="padding:0px 0px 0px 0px;">
                                                <li>{{d1.Description}}</li>
                                            </ul>
                                        </div>
                                    </div>
                                    <br /><br />

                                </div>
                            </div>
                        </div>


                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <!-- Modal Intern-->
        <div id="InternContentPreview" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Intern Content Overview </h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">

                        <div class="col-md-12" style="">
                            <h3 style="text-transform:capitalize;text-align:center"><b> {{ CourseName }} </b></h3>
                        </div>

                        <div class="col-md-12 rights border">
                            @*<h4 class=""><u><b>Content</b></u></h4>*@
                            <div class="mt-1">
                                <h6><b>Description</b></h6>
                                <p ng-if="ShortDescription !== undefined">{{ShortDescription}}</p>
                                <p ng-if="ShortDescription === undefined || ShortDescription === ''"></p>

                                <div class="row" style="text-align:center;">
                                    <div class="col-md-12">
                                        <div class="accordion" id="accordionExample">

                                            <div class="card">
                                                @*ng-repeat="d in HeadingsContent"*@
                                                <div class="card-header" style="padding:0" id="headingTwo">
                                                    <h2 class="mb-0">
                                                        <button class="btn btn-link btn-block text-left collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                                            <lable>
                                                                {{CourseContentHeading}}
                                                            </lable><i class="fa fa-chevron-down float-right" id="fa"></i>
                                                        </button>
                                                    </h2>
                                                </div>
                                                <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
                                                    <div class="card-body text-left">
                                                        <ol style="margin:0;padding:0;margin-left:15px;">
                                                            <li ng-repeat="d in descriptionarray">
                                                                {{CourseContentHeading}}
                                                            </li>
                                                            <li ng-repeat="d1 in arrCourseContentDescription">
                                                                {{d1.Description}}
                                                            </li>
                                                        </ol>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>

                            </div>
                            <br />
                            <div>
                                <h6><b>Prerequisities</b></h6>
                                <ol style="margin:0;padding:0">
                                    <li ng-repeat="d in arrCoursePrerequisities">
                                        {{ d.PrerequisitePoints }}
                                    </li>
                                </ol>
                            </div>
                            <br />

                            @*<div>
                                    <h6><b>Description</b></h6>
                                    <ol style="margin:0;padding:0">
                                        <li ng-repeat="d in arrCourseContentDescription ">
                                            {{d.Description}}
                                        </li>
                                    </ol>
                                </div>*@
                            <br />

                        </div>


                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

